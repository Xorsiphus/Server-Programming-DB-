<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.sourceforge.org/hibernate-configuration-3.0.dtd">
<!--xmlns = "http://www.hibernate.org/xsd/orm/cfg"-->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL81Dialect</property>
        <property name="hibernate.connection.url">jdbc:postgresql://1.1.1.11:5432/Test_DB</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">super</property>
        <property name="show_sql">true</property>
    </session-factory>
</hibernate-configuration>